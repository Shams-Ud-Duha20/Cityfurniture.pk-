<h3><%= Heading %></h3>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Street</th>
            <th>City</th>
            <th>Postal Code</th>
            <th>Total Amount</th>
            <th>Items</th>
            <th>Order Date</th>
        </tr>
    </thead>
    <tbody>
        <% orders.forEach(order => { %>
            <tr>
                <td><%= order.orderId %></td>
                <td><%= order.customer.name %></td>
                <td><%= order.customer.street %></td>
                <td><%= order.customer.city %></td>
                <td><%= order.customer.postalCode %></td>
                <td><%= order.totalAmount %></td>
                <td>
                    <ul>
                        <% order.items.forEach(item => { %>
                            <li>
                                <strong><%= item.title %>:</strong> <%= item.description %> - PKR <%= item.price %>
                            </li>
                        <% }); %>
                    </ul>
                </td>
                <td><%= order.createdAt.toLocaleDateString() %></td>
            </tr>
        <% }); %>
    </tbody>
</table>