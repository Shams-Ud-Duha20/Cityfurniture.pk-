    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <!-- "Previous" Button -->
            <li class="page-item <%= page == 1 ? "disabled" : "" %>">
                <a class="page-link" href="/admin/<%= Number(page) - 1 %>?search=<%= search %>&sort=<%= sort %>">
                    Previous
                </a>
            </li>
    
            <!-- Page Number Links -->
            <% for (let index = 1; index <= totalPages; index++) { %>
                <li class="page-item <%= page === index ? "active" : "" %>">
                    <a
                        class="page-link"
                        href="/admin/<%= index %>?search=<%= search %>&sort=<%= sort %>"
                    >
                        <%= index %>
                    </a>
                </li>
            <% } %>
    
            <!-- "Next" Button -->
            <li class="page-item <%= page == totalPages ? "disabled" : "" %>">
                <a
                    class="page-link"
                    href="/admin/<%= Number(page) + 1 %>?search=<%= search %>&sort=<%= sort %>"
                >
                    Next
                </a>
            </li>
        </ul>
    </nav>
    