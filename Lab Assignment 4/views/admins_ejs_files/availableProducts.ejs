

<h4>My Featured Products</h4>

<form method="GET" action="/admin/1" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <input
                type="text"
                name="search"
                class="form-control"
                placeholder="Search by title"
                value="<%= search %>"
            />
        </div>
        <div class="col-md-4">
            <select name="sort" class="form-select">
                <option value="asc" <%= sort === "asc" ? "selected" : "" %>>Price: Low to High</option>
                <option value="desc" <%= sort === "desc" ? "selected" : "" %>>Price: High to Low</option>
            </select>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">Filter</button>
            <a href="/admin/1" class="btn btn-secondary">Reset</a>
        </div>
    </div>
</form>


<div class="row">
    <% for( let index = 0; index < pds.length; index++ ) { %>
        <div class="col-4">
            <div class="card" style="width: 18rem;">
                <img src="../../public/images/Diamond-sofa-cum-bed-2-300x300.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%= pds[index].title %></h5>
                    <p class="card-text"><%=pds[index].description %></p>
                    <!-- <a href="#" class="btn btn-primary">PKR: <%=pds[index].price %> Add To Cart</a> -->
                    <a href="/add-to-cart/<%= pds[index]._id %>" class="btn btn-primary">PKR: <%=pds[index].price %> Add To Cart</a>
                </div>
            </div>
        </div>
    <% } %>
</div>

